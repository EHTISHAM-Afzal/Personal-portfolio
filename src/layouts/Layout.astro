---
import Background from "../components/Background.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="w-full grid grid-flow-col grid-cols-[1fr] sm:grid-cols-[1fr,_35rem,_1fr] justify-center items-center text-white/80"
  >
    <Background />
    <div class="wfull sm:col-start-2">
      <slot />
    </div>
  </body>
</html>
