---
import Background from "../components/Background.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio Site Of Ehtisham Afzal" />
    <meta
      property="og:description"
      content="Portfolio Site Of Ehtisham Afzal"
    />
    <meta
      property="twitter:description"
      content="Portfolio Site Of Ehtisham Afzal"
    />
    <meta property="og:url" content="https://ehtisham.vercel.app" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/sham3.png" />
    <meta
      property="twitter:image"
      content="https://ehtisham.vercel.app/image.png"
    />
    <meta property="image" content="https://ehtisham.vercel.app/image.png" />
    <meta property="og:image" content="https://ehtisham.vercel.app/image.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="twitter:title" content={title} />
    <style is:global>
      /* This is the part that's visible */
      body::-webkit-scrollbar {
        width: 5px;
      }
      /* Track */
      body::-webkit-scrollbar-track {
        background: #01192e;
      }
      /* Handle */
      body::-webkit-scrollbar-thumb {
        background: #015192;
        border-radius: 4px;
      }
      /* Handle on hover */
      body::-webkit-scrollbar-thumb:hover {
        background: #0383ed;
      }
    </style></head
  >

  <body
    class="w-full grid sm:grid-cols-[1fr,_35rem,_1fr] justify-center items-center text-white/90"
  >
    <Background />
    <div class="wfull sm:col-start-2">
      <slot />
    </div>
  </body>
</html>
